{% extends 'base.html.twig' %}

{% block title %}Ajouter un participant{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card p-4 shadow-lg" style="max-width: 500px; width: 100%;">
        <h1 class="text-center mb-4">Ajouter un participant à l'événement "{{ event.name }}"</h1>

        {{ form_start(form, { 'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'} }) }}
        
        <div class="mb-3">
            {{ form_label(form) }}
            {{ form_widget(form, { 'attr': {'class': 'form-control'} }) }}
            {% for error in form.vars.errors %}
                <div class="invalid-feedback d-block">{{ error.message }}</div>
            {% endfor %}
        </div>

        <button type="submit" class="btn btn-primary w-100">Ajouter</button>
        
        {{ form_end(form) }}
        
        <div class="mt-3 text-center">
            <a href="{{ path('view_event', { id: event.id }) }}" class="btn btn-secondary w-100">Retour aux détails de l'événement</a>
        </div>
    </div>
</div>
{% endblock %}
