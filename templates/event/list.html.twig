{% extends 'base.html.twig' %}

{% block title %}Liste des événements{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Liste des événements</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Date</th>
                    <th>Lieu de l'évenement</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for event in event %}
                    <tr>
                        <td>{{ event.id }}</td>
                        <td>{{ event.name }}</td>
                        <td>{{ event.date|date('d/m/Y') }}</td>
                        <td>{{ event.adresse }}</td>
                        <td>
                            <a href="{{ path('view_event', { id: event.id }) }}" class="btn btn-primary btn-sm">
                                Voir les détails
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucun événement disponible.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
